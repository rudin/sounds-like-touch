{
  "private": true,
  "name": "sounds-like-touch",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build --template src/index.html --no-prerender",
    "serve": "sirv build --cors --single",
    "dev": "preact watch --template src/index.html",
    "lint": "eslint src",
    "test": "jest",
    "deploy": "surge ./build https://slt.surge.sh"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "preact-cli": "^3.0.0-rc.6",
    "preact-render-spy": "^1.2.1",
    "sirv-cli": "^0.4.5"
  },
  "dependencies": {
    "@react-hook/mouse-position": "^3.2.2",
    "body-scroll-lock": "^3.0.2",
    "preact": "^10.4.4",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "react-spring": "^8.0.27",
    "react-use-dimensions": "^1.2.1",
    "react-use-toggle": "^0.1.0",
    "use-debounce": "^3.4.2",
    "use-throttle": "^0.0.3",
    "use-window-focus": "^1.0.0"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  },
  "alias": {
    "react": "preact/hooks",
    "react-dom": "preact"
  }
}
